{
  "name": "picpay",
  "version": "0.5.0",
  "description": "Teste back-end PicPay",
  "author": "David M Marques",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "commit:push": "git add . && git-cz && npm run release && git push",
    "release": "standard-version",
    "persistentdb": "docker run -p 5432:5432 -e POSTGRES_USER=picpay -e POSTGRES_PASSWORD=picpay -e POSTGRES_DB=picpay -v postgresql:/var/lib/postgresql -v postgresql_data:/var/lib/postgresql/data -d postgres:alpine",
    "testdb": "docker run -p 5432:5432 -e POSTGRES_USER=picpay -e POSTGRES_PASSWORD=picpay -e POSTGRES_DB=picpay -d postgres:alpine",
    "stopdocker": "docker stop $(docker ps -q -a) && docker rm $(docker ps -q -a)",
    "restart": "npm run stopdocker && sleep 4 && npm run testdb && sleep 5 && npm run start",
    "psql": "psql postgres://picpay:picpay@localhost:5432/picpay",
    "restartcontainer": "docker rm $(docker container ls -qa) && docker-compose up",
    "veridcontainer": "docker inspect -f '{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' postrgres"
  },
  "dependencies": {
    "@nestjs/common": "^5.1.0",
    "@nestjs/core": "^5.1.0",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/swagger": "^2.5.1",
    "@nestjs/typeorm": "^5.2.2",
    "cache-manager": "^2.9.0",
    "jest-cucumber": "^1.0.11",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^7.4.3",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.2",
    "standard-version": "^4.4.0",
    "typeorm": "^0.2.7",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.10.3",
    "@types/supertest": "^2.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^23.5.0",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
